<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Lions Club Castres Pastel{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
            <link href="{{ asset('css/z_styles.css') }}" rel="stylesheet">
        {% endblock %}

        <link href="{{ asset('img/logos/logo-pastel-favicon.png') }}" rel="icon" type="image/x-icon"/>

    </head>

    <body>
        <nav class="navbar navbar-default mb-0">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand img-responsive" href="{{ path('zcomdezign_platform_homepage') }}">
                        <img id="logo" src="{{ asset('img/logos/logo-pastel-horizontal-v3.png') }}" alt="Logo Castres Pastel" />
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="{% if homePage is defined %}active{% endif %}"><a href="{{ path('zcomdezign_platform_homepage') }}">Accueil</a></li>
                        <li class="{% if blogPage is defined %}active{% endif %}"><a href="{{ path('zcomdezign_platform_blog') }}">Actualités</a></li>
                        {% if is_granted('ROLE_USER') %}
                            <li class="{% if profilePage is defined %}active{% endif %}"><a href="{{ path('fos_user_profile_show') }}">Mon profil</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Se déconnecter</a></li>
                        {% else %}    
                            <li class="{% if loginPage is defined %}active{% endif %}"><a href="{{ path('fos_user_security_login') }}">Se connecter</a></li>
                            <li class="{% if registerPage is defined %}active{% endif %}"><a href="{{ path('fos_user_registration_register')}}">S'inscrire</a></li>
                      {% endif %}        
                    </ul>
                </div>
            </div>
        </nav>

        {% block body %}
            {% block fos_user_content %}{% endblock %}
        {% endblock %}
        
        <footer class="footer">
            <div class="container">
                <div id="mentions" class="col-xs-12 col-sm-4">
                    <a href="{#{{ path('zcomdezign_platform_contact') }}#}"> Contact</a> | 
                    <a href="{#{{ path('zcomdezign_platform_mentions') }}#}">Mentions légales</a>
                </div>

                <div id="copyright" class="col-xs-12 col-sm-4">
                    <p>© Lions Club Castres Pastel {{ 'now'|date('Y') }}<br>
                    Tous droits réservés<br>
                    Création originale © <a href="http://zcomdezign.com">ZcOmDeZign</a></p>
                </div>

                <div id="networks" class="col-xs-12 col-sm-4">
                    <a href="https://www.facebook.com/lionsclubs"><i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i></a>
                    <a href="https://twitter.com/lionsclubs"><i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i></a>
                    <a href="https://plus.google.com/+lionsclubs"><i class="fa fa-google-plus-square fa-2x" aria-hidden="true"></i></a>
                    <a href="https://www.instagram.com/lionsclubs/"><i class="fa fa-instagram fa-2x" aria-hidden="true"></i></a>
                    <a href="https://www.youtube.com/user/lionsclubsorg"><i class="fa fa-youtube-square fa-2x" aria-hidden="true"></i></a>
                    <a href="https://www.linkedin.com/company/33854/"><i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i></a>
                    <a href="https://www.flickr.com/photos/lionsclubsorg/"><i class="fa fa-flickr fa-2x" aria-hidden="true"></i></a>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
            <script src="https://use.fontawesome.com/59b5fb4587.js"></script>
            
            <script>
                $(document).ready(function() {
                    $('.toUp, .animateScroll').on('click', function(e) {
                        e.preventDefault();
                        var hash = this.hash;
                        $('html, body').animate({
                            scrollTop: $(this.hash).offset().top
                        }, 2000, function() {
                            window.location.hash = hash;
                        });
                    });
                });
            </script>
            
            <script>
                $('.alert').delay(4000).hide('slow');
            </script>   
            
        {% endblock %}

    </body>
</html>